{{> header }}

<main>
    <div class="container-fluid">

        <!-- Section: Customers -->
        <section class="section team-section">

            <div class="row mb-1">
                <div class="col-md-12">
                    <h4 class="h4-responsive mt-1">Ver Documentações</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">

                    <div class="card card-cascade narrower m-5">

                        <div class="px-4">

                            <div class="table-wrapper">
                                <table class="table mb-0">

                                    <thead>
                                    <tr>
                                        <th class="th-lg">
                                            Descrição
                                        </th>
                                        <th class="th-lg text-center">
                                            Versão Documento
                                        </th>
                                        <th class="th-lg text-center">
                                            Autor
                                        </th>
                                        <th class="th-lg text-center">
                                            Data Criação
                                        </th>
                                        <th class="th-lg text-center">
                                            Versão Microsserviço
                                        </th>
                                        <th></th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {{#each documentacoes}}
                                        <tr>
                                            <td>{{descricao}}</td>
                                            <td class="text-center">{{versaoXPDL}}</td>
                                            <td class="text-center">{{autor}}</td>
                                            <td class="text-center">{{dataCriacao}}</td>
                                            <td class="text-center">{{versao}}</td>
                                            <td>
                                                <a href="/painel/documentacao/{{this.id}}"
                                                   class="btn btn-floating btn-sm btn-primary p-0">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                                <a href="/painel/documentacao/{{this.id}}/download"
                                                   class="btn btn-floating btn-sm btn-primary p-0">
                                                    <i class="fas fa-file-download"></i>
                                                </a>
                                                <button onclick="excluir('{{this.id}}')"
                                                        class="btn btn-floating btn-sm btn-primary p-0 m-0">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    {{else}}
                                        <tr>
                                            <td colspan="5" class="text-center">Nenhum registro encontrado!</td>
                                        </tr>
                                    {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </section>

    </div>

</main>


{{> footer }}