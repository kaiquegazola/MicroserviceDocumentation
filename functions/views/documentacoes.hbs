{{> header }}

<main>

    <div class="container">
        <div class="card card-cascade narrower m-5">

            <div
                class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

                <a href="" class="white-text mx-3">Documentações</a>


            </div>

            <div class="px-4">

                <div class="table-wrapper">
                    <table class="table mb-0">

                        <thead>
                            <tr>
                                <th class="th-lg">
                                    Descrição
                                </th>
                                <th class="th-lg text-center">
                                    Versão Documento
                                </th>
                                <th class="th-lg text-center">
                                    Autor
                                </th>
                                <th class="th-lg text-center">
                                    Data Criação
                                </th>
                                <th class="th-lg text-center">
                                    Versão Microsserviço
                                </th>
                                <th colspan="2" class="text-center"><i class="fas fa-cog"></i></th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each documentacoes}}
                                <tr>
                                    <td>{{descricao}}</td>
                                    <td class="text-center">{{versaoXPDL}}</td>
                                    <td class="text-center">{{autor}}</td>
                                    <td class="text-center">{{dataCriacao}}</td>
                                    <td class="text-center">{{versao}}</td>
                                    <td>
                                        <a href="/painel/documentacao/{{this.id}}"
                                            class="btn btn-floating btn-sm btn-primary p-0">
                                            <i class="far fa-eye"></i>
                                        </a>
                                        <a href="/painel/documentacao/{{this.id}}"
                                            class="btn btn-floating btn-sm btn-primary p-0">
                                            <i class="fas fa-file-download"></i>
                                        </a>
                                        <button onclick="excluir('{{this.id}}')"
                                            class="btn btn-floating btn-sm btn-primary p-0 m-0">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            {{else}}
                                <tr>
                                    <td colspan="5" class="text-center">Nenhum registro encontrado!</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </div>

</main>


{{> footer }}